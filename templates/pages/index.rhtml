<section id="articles">
  <% for article in articles[0..0] %>
    <article class="post">
      <header>
        <h1><%= article.title %></h1>
        <span class="date"><%= article.date %></span>
      </header>

      <section class="content">
        <%= article.body %>
        <h2 id="thanks">thanks for reading.</h2>
      </section>
    </article>
  <% end %>
</section>

<section id="archives">
  <%= archives[3..-1] %>
</section>

